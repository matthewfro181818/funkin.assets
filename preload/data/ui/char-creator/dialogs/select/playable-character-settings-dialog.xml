<?xml version="1.0" encoding="utf-8"?>
<collapsible-dialog title="Playable Character Settings" width="400" height="400">
  <vbox width="100%" height="100%">
    <frame text="Owned Characters" width="100%" height="70%">
      <scrollview id="ownedCharsView" contentWidth="100%" width="100%" height="100%" />
    </frame>
    <frame text="Metadata" width="100%" height="30%">
      <vbox width="100%" height="100%">
        <hbox width="100%">
          <label text="Player Name" width="50%" verticalAlign="center"/>
          <textfield id="playerDataName" width="50%"/>
        </hbox>
        <checkbox id="playerDataShowUnowned" text="Show Songs with Other Characters"/>
        <checkbox id="playerDataUnlocked" text="Unlocked by Default"/>
      </vbox>
    </frame>
  </vbox>
</collapsible-dialog>
